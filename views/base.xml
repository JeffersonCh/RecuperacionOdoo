<odoo>
    <!-- Book action list -->

    <record model="ir.actions.act_windows" id="book_list_action">        
        <field name="name">Libros</field>
        <field name="res_model">book.model</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">No hay datos, prueba a crear un nuevo libro</p>
        </field>
    </record>

    <!-- Book form view -->

    <record model="ir.ui.view" id="book_form_view">
        <field name="name">book.form</field>
        <field name="model">book.model</field>
        <field name="arch" type="xml">
            <form string = "Vista formulario de libros">
                <field name="name"/>
                <field name="description"/>
                <field name="release_date"/>
                <field name="genres"/>
            </form>
        </field>  
    </record>

    <!-- Book tree view -->

    <record model='ir.ui.view' id='book_tree_view'>
        <field name="name">book.tree</field>
        <field name="model">book.model</field>
        <field name="arch" type="xml">
            <tree string="Vista arbol de libros">
                <field name="name"/>
                <field name="description"/>
                <field name="release_date"/>
                <field name="genres"/>
            </tree>
        </field>
    </record>

    <!-- Menu items -->

    <menuitem id="base_menu" name="Libros y Autores"/>
    <menuitem id="base_module" name="Modulo Base" parent="base_menu"/>
    <menuitem id="book_menu" name="Libros" parent="base_menu" action="book_list_action"/>

</odoo>